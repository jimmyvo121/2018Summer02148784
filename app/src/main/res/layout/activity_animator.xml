            android:id="@+id/animator_char"
            android:text="char"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/animator_rotation"
            android:text="rotation"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/animator_alpha"
            android:text="Alpha"
            />
    </GridLayout>





</RelativeLayout>