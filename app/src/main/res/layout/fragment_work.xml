<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.WorkFragment"
    android:background="@android:color/holo_green_light">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/main_title_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_bright">

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="This fragment is used for quiz"
                android:textAlignment="center"
                android:layout_gravity="center"
                />


            <LinearLayout

                android:id="@+id/work_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                    >

                    <Button
                        android:id="@+id/work1_bt"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="1"
                        android:background="@android:color/holo_green_light"

                        android:text="Quiz1"
                        android:textSize="25dp"

                        />

                    <Button
                        android:id="@+id/work2_bt"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="1"
                        android:background="@android:color/holo_green_light"
                        android:text="Quiz2"
                        android:textSize="25dp"

                        />

                    <Button
                        android:id="@+id/work3_bt"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="1"
                        android:background="@android:color/holo_green_light"
                        android:text="Quiz3"
                        android:textSize="25dp"/>


            </LinearLayout>

            <Button
                android:layout_below="@id/three_buttons"
                android:id="@+id/work_submit_bt"
                android:gravity="bottom"
                android:layout_margin="10dp"
                android:background="@drawable/round_button"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="Submit"
                android:textSize="25dp" />

         </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:gravity="center"
                android:text="You can do it!"
                android:background="@android:color/holo_blue_light"
                android:layout_alignParentBottom="true"
                />


    </RelativeLayout>


</FrameLayout>